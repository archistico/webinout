{% extends 'base.html.twig' %}

{% block title %}Lista Scadenze
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12">
			<h1>LISTA SCADENZE</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-12 py-3">
			<a href="{{ path('app_scadenza_nuovo') }}" class="btn btn-primary btn-square w-100">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-plus" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
				NUOVA</a>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="table-responsive">
					<table class="table table-vcenter card-table table-striped">
						<thead>
							<tr>
								<th>Attivita</th>
								<th class="text-end">Scadenza</th>
								<th class="w-1"></th>
							</tr>
						</thead>
						<tbody>
							{% for elemento in lista %}
								<tr>
									<td>{{ elemento.Attivita }}</td>
									<td class="text-end">{{ elemento.DataScadenza|date('d/m/Y') }}</td>
									<td>
										<div class="btn-list flex-nowrap">
											<div class="col-xl-auto py-1">
												<a href="{{ path('app_scadenza_mostra', { id: elemento.id }) }}" class="btn btn-twitter w-100 btn-icon" aria-label="Mostra" data-balloon-pos="up-right">
													<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="24" height="24" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"/></svg>
												</a>
											</div>
											<div class="col-xl-auto py-1">
												<a href="{{ path('app_scadenza_modifica', { id: elemento.id }) }}" class="btn btn-rss w-100 btn-icon" aria-label="Modifica" data-balloon-pos="up-right">
													<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="24" height="24" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"/><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"/><path d="M16 5l3 3"/></svg>
												</a>
											</div>
											<div class="col-xl-auto py-1">
												<a href="{{ path('app_scadenza_cancella_ok', { id: elemento.id }) }}" class="btn btn-danger w-100 btn-icon" aria-label="Cancella" data-balloon-pos="up-right">
													<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 7l16 0"/><path d="M10 11l0 6"/><path d="M14 11l0 6"/><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/></svg>
												</a>
											</div>
										</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
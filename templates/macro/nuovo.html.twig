{% extends "base.html.twig" %}

{% block title %}Categoria Macro - Nuova
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12">
			<h1>NUOVA CATEGORIA MACRO</h1>
		</div>
	</div>

	{{ form_start(form) }}
	<div class="row">
		<div class="col-6">
			{{ form_label(form.Nome) }}
			{{ form_widget(form.Nome) }}
			<div class="text-red li-senza-pallino">
				{{ form_errors(form.Nome) }}
			</div>
		</div>
		<div class="col-6">
			{{ form_label(form.Invio) }}
			{{ form_widget(form.Invio) }}
			<div class="text-red li-senza-pallino">
				{{ form_errors(form.Invio) }}
			</div>
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-md-6 mt-2">
			<a class="btn btn-secondary btn-square w-100" href="{{ path('app_categoria_macro_lista') }}">TORNA INDIETRO</a>
		</div>
		<div class="col-md-6 mt-2">
			<button type="submit" class="btn btn-primary btn-square w-100">SALVA</button>
		</div>
	</div>
	{{ form_end(form) }}

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Analisi movimenti
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12">
			<h1>ANALISI MOVIMENTI</h1>
		</div>
	</div>
	<div class="row py-3">
		<div class="col-12">
			<div class="row">
				<div class="col-sm-12 col-lg-6 p-2">
					{{ render_chart(chart_analisi_1, {'class': 'chart-lg'}) }}
				</div>
				<div class="col-sm-12 col-lg-6 p-2">
					{{ render_chart(chart_analisi_2, {'class': 'chart-lg'}) }}
				</div>
			</div>
		</div>
	</div>

	<div class="col-12">
					<div class="row row-cards">
						<h2>Totali per categorie meso</h2>
						
						<div class="row">
							<div class="col-12">
								<div class="card">
									<div class="table-responsive">
										<table class="table table-vcenter card-table table-striped">
											<thead>
												<tr>
													<th>Categoria</th>
													<th class="text-end">Importo</th>
												</tr>
											</thead>
											<tbody>
												{% for elemento in listaMeso %}
													<tr>
														<td>{{ elemento.MacroNome }} | {{ elemento.MesoNome }}</td>
														<td class="text-end">{{ elemento.Totale|format_currency('EUR', {rounding_mode: 'floor'}, locale='it') }}</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

	<div class="row mt-4">
		<div class="col-12">
			<a class="btn btn-secondary btn-square w-100" href="{{ path('app_home') }}">TORNA INDIETRO</a>
		</div>
	</div>

{% endblock %}

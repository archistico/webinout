{% extends 'base.html.twig' %}

{% block title %}Progressivo
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12">
			<h1>PROGRESSIVO</h1>
		</div>
	</div>

	<div class="row mt-3">
		<div class="col-12">
			<div class="row row-cards">
				<h2>Progressivo movimenti in entrata rispetto all'anno precedente</h2>

				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="table-responsive">
								<table class="table table-vcenter card-table table-striped">
									<thead>
										<tr>
											<th>Categoria</th>
											<th class="text-end">{{ inizioAnnoPassato|date('d/m/Y') }} - {{ fineAnnoPassato|date('d/m/Y') }}</th>
                                            <th class="text-end">{{ inizioAnnoInCorso|date('d/m/Y') }} - {{ fineAnnoInCorso|date('d/m/Y') }}</th>
                                            <th class="text-end">Differenza</th>
										</tr>
									</thead>
									<tbody>
										{% for elemento in entrate %}
											<tr>
												<td>{{ elemento.Categoria }}</td>
												<td class="text-end">{{ elemento.TotaleAnnoScorso|format_currency('EUR', {rounding_mode: 'floor'}, locale='it') }}</td>
                                                <td class="text-end">{{ elemento.TotaleAnnoInCorso|format_currency('EUR', {rounding_mode: 'floor'}, locale='it') }}</td>
                                                <td class="text-end">{{ elemento.Differenza|format_currency('EUR', {rounding_mode: 'floor'}, locale='it') }}</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>

				<h2 class="mt-4">Progressivo movimenti in uscita rispetto all'anno precedente</h2>
				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="table-responsive">
								<table class="table table-vcenter card-table table-striped">
									<thead>
										<tr>
											<th>Categoria</th>
											<th class="text-end">{{ inizioAnnoPassato|date('d/m/Y') }} - {{ fineAnnoPassato|date('d/m/Y') }}</th>
                                            <th class="text-end">{{ inizioAnnoInCorso|date('d/m/Y') }} - {{ fineAnnoInCorso|date('d/m/Y') }}</th>
                                            <th class="text-end">Differenza</th>
										</tr>
									</thead>
									<tbody>
										{% for elemento in uscite %}
											<tr>
												<td>{{ elemento.Categoria }}</td>
												<td class="text-end">{{ elemento.TotaleAnnoScorso|format_currency('EUR', {rounding_mode: 'floor'}, locale='it') }}</td>
                                                <td class="text-end">{{ elemento.TotaleAnnoInCorso|format_currency('EUR', {rounding_mode: 'floor'}, locale='it') }}</td>
                                                <td class="text-end">{{ elemento.Differenza|format_currency('EUR', {rounding_mode: 'floor'}, locale='it') }}</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row mt-4">
		<div class="col-12">
			<a class="btn btn-secondary btn-square w-100" href="{{ path('app_home') }}">TORNA INDIETRO</a>
		</div>
	</div>

{% endblock %}
